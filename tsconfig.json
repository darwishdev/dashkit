{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "allowJs": true,
    "module": "ESNext",
    "noImplicitAny": false,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/buildConfig",
    "src/**/*.ts",
    "src/**/**.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "composables/composables.ts",
    "src/assets/*.svg",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}